{
    // Comments are accepted in the manifest, even though it is JSON.
    "manifest_version": 3,
    "name": "Regain",
    "description": "A Time management Tool to prevent dopamine Chase",
    "version": "0.0.4",
    "icons": {
        "16": "logo/logo-16.png",
        "48": "logo/logo-48.png",
        "128": "logo/logo-128.png"
    },
    "options_page": "settings/settings.html",
    "action": {
        "default_title": "Chrome Addon v3 Starter",
        "default_popup": "popup/popup.html"
    },
    "permissions": ["history"],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts": [{
        "js": ["foreground.js","utils/page.js","utils/storageUtils.js"],
        "matches": ["*://*/*"]
    }],
    "web_accessible_resources": [{
        "resources": ["utils/promptForm.html","utils/prompt.js","utils/timeExtensionForm.html","utils/timeExtension.js"],
        "matches": ["<all_urls>"]
    }]
}
